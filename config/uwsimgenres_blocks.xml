	<grblocks>
		<!-- grblock: when grblocks is present, the normal blocks are not processed
			numlines - integer (0, 20]
			linebet - integer (0, 5]
			bankroll - integer > 0 unit is DOLLARS
			denomination - integer > 0 unit is CENTS; To improve accuracy, the real denomination used is calculated by denomination / numlines in the simulator.
							In other words, denomination is the TOTAL WAGER on each spin in cents.
			blockrepeats - integer > 0
			Note: wager is numblines * linebet * denomination (CENTS)
		-->
		
		<grblock numlines="1"  linebet="1" bankroll="100" denomination="100" blockrepeats="10000" />
		<grblock numlines="20" linebet="1" bankroll="100" denomination="100" blockrepeats="10000" />
		
	</grblocks>
	
	<ffsblocks>
